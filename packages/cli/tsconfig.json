{
  "compilerOptions": {
    "jsx": "preserve",
    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "build",
    "strict": false,
    "target": "es5",
    "declaration": true,
    "declarationDir": "build/types",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@jsx-lite/core": ["../core/src"]
    }
  },
  "references": [
    { "path": "../core" }
  ],
  "ts-node": {
    "typeCheck": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
