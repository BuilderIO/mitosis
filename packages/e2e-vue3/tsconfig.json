{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true
  },
  "include": [
    "vue_src/**/*.ts",
    "vue_src/**/*.d.ts",
    "vue_src/**/*.tsx",
    "vue_src/**/*.vue"
  ],
  "exclude": ["**/*.lite.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
