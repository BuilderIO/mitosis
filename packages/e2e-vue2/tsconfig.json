{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["vue_src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "vue_src/**/*.ts",
    "vue_src/**/*.d.ts",
    "vue_src/**/*.tsx",
    "vue_src/**/*.vue"
  ],
  "exclude": ["node_modules", "**/*.lite.tsx"]
}
