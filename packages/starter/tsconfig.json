{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "checkJs": true,
    "types": ["node"]
  },
  "include": ["./script.cjs"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
